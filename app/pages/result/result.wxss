.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1a1a1a 0%, #0d0d0d 100%);
  padding: 30rpx;
  padding-bottom: 120rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #c9a962;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #888;
}

.score-section {
  text-align: center;
  padding: 60rpx 0;
  margin-bottom: 40rpx;
}

.score-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(201, 169, 98, 0.2) 0%, rgba(201, 169, 98, 0.05) 100%);
  border: 8rpx solid #c9a962;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx;
  box-shadow: 0 0 60rpx rgba(201, 169, 98, 0.3);
}

.score-value {
  font-size: 80rpx;
  font-weight: bold;
  color: #c9a962;
  line-height: 1;
}

.score-unit {
  font-size: 24rpx;
  color: #c9a962;
  margin-top: 8rpx;
}

.score-label {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #c9a962;
  margin-bottom: 24rpx;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.metric-card {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  border: 1rpx solid rgba(201, 169, 98, 0.1);
}

.metric-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 12rpx;
}

.metric-label {
  font-size: 24rpx;
  color: #888;
  display: block;
  margin-bottom: 8rpx;
}

.metric-value {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.metric-value.good {
  color: #4caf50;
}

.metric-value.normal {
  color: #ff9800;
}

.metric-value.poor {
  color: #f44336;
}

.metric-desc {
  font-size: 24rpx;
  color: #888;
}

.analysis-card {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1rpx solid rgba(201, 169, 98, 0.1);
}

.analysis-item {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.analysis-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.analysis-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.analysis-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.analysis-title {
  flex: 1;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}

.analysis-score {
  font-size: 28rpx;
  font-weight: bold;
}

.analysis-score.good {
  color: #4caf50;
}

.analysis-score.normal {
  color: #ff9800;
}

.analysis-score.poor {
  color: #f44336;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4rpx;
  margin-bottom: 16rpx;
}

.analysis-desc {
  font-size: 26rpx;
  color: #888;
  line-height: 1.6;
}

.recommendation-card {
  background: rgba(201, 169, 98, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border: 1rpx solid rgba(201, 169, 98, 0.2);
}

.rec-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.rec-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.rec-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #c9a962;
}

.rec-section {
  margin-bottom: 20rpx;
}

.rec-section:last-child {
  margin-bottom: 0;
}

.rec-label {
  font-size: 26rpx;
  color: #c9a962;
  display: block;
  margin-bottom: 8rpx;
}

.rec-value {
  font-size: 28rpx;
  color: #ccc;
  line-height: 1.6;
}

.rec-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 8rpx;
}

.rec-tag {
  background: rgba(201, 169, 98, 0.2);
  color: #c9a962;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.weekly-plan {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1rpx solid rgba(201, 169, 98, 0.1);
}

.plan-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  display: block;
  margin-bottom: 24rpx;
}

.plan-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.plan-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.02);
  border-radius: 12rpx;
  padding: 20rpx;
}

.plan-day {
  width: 80rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #c9a962;
}

.plan-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.plan-workout {
  flex: 1;
  font-size: 26rpx;
  color: #ccc;
}

.plan-duration {
  font-size: 24rpx;
  color: #888;
  margin-left: 20rpx;
}

.btn-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn-primary, .btn-secondary, .btn-tertiary {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: linear-gradient(135deg, #c9a962 0%, #a88432 100%);
  color: #1a1a1a;
  border: none;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.05);
  color: #c9a962;
  border: 1rpx solid #c9a962;
}

.btn-tertiary {
  background: rgba(201, 169, 98, 0.15);
  color: #c9a962;
  border: 1rpx solid rgba(201, 169, 98, 0.3);
}
