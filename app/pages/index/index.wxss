.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1a1a1a 0%, #0d0d0d 100%);
  padding: 30rpx;
  padding-bottom: 120rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #c9a962;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #888;
}

.form-section {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border: 1rpx solid rgba(201, 169, 98, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #c9a962;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(201, 169, 98, 0.2);
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #ccc;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(201, 169, 98, 0.3);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #fff;
  box-sizing: border-box;
}

.input::placeholder {
  color: #666;
}

.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #ccc;
}

.picker {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(201, 169, 98, 0.3);
  border-radius: 12rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #888;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #c9a962 0%, #a88432 100%);
  border: none;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(201, 169, 98, 0.3);
}

.submit-btn:active {
  opacity: 0.9;
}
