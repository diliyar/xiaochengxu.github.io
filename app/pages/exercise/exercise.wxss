.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1a1a1a 0%, #0d0d0d 100%);
  padding: 30rpx;
  padding-bottom: 120rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #c9a962;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #888;
}

.tab-container {
  margin-bottom: 30rpx;
}

.tab-scroll {
  white-space: nowrap;
}

.tab-list {
  display: flex;
  gap: 20rpx;
}

.tab-item {
  padding: 20rpx 32rpx;
  background: rgba(255, 255, 255, 0.03);
  border: 1rpx solid rgba(201, 169, 98, 0.2);
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #888;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #c9a962 0%, #a88432 100%);
  color: #1a1a1a;
  border-color: transparent;
  font-weight: bold;
}

.exercise-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.exercise-card {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1rpx solid rgba(201, 169, 98, 0.1);
  transition: all 0.3s ease;
}

.exercise-card:active {
  background: rgba(201, 169, 98, 0.1);
  transform: scale(0.98);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.exercise-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.difficulty-tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-weight: bold;
}

.difficulty-tag.beginner {
  background: rgba(76, 175, 80, 0.2);
  color: #4caf50;
}

.difficulty-tag.intermediate {
  background: rgba(255, 152, 0, 0.2);
  color: #ff9800;
}

.difficulty-tag.advanced {
  background: rgba(244, 67, 54, 0.2);
  color: #f44336;
}

.card-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.info-text {
  font-size: 26rpx;
  color: #c9a962;
}

.card-desc {
  font-size: 26rpx;
  color: #888;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.muscle-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.muscle-tag {
  background: rgba(201, 169, 98, 0.15);
  color: #c9a962;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.benefit-tag {
  background: rgba(76, 175, 80, 0.15);
  color: #4caf50;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.detail-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.detail-popup {
  width: 100%;
  max-height: 80vh;
  background: #1a1a1a;
  border-radius: 24rpx;
  overflow: hidden;
  border: 1rpx solid rgba(201, 169, 98, 0.3);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, rgba(201, 169, 98, 0.2) 0%, rgba(201, 169, 98, 0.05) 100%);
  border-bottom: 1rpx solid rgba(201, 169, 98, 0.2);
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #c9a962;
}

.popup-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #888;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.popup-content {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 30rpx;
}

.section-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #c9a962;
  display: block;
  margin-bottom: 16rpx;
}

.section-text {
  font-size: 26rpx;
  color: #ccc;
  line-height: 1.8;
}

.step-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
}

.step-num {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #c9a962 0%, #a88432 100%);
  color: #1a1a1a;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.step-text {
  font-size: 26rpx;
  color: #ccc;
  line-height: 1.6;
  flex: 1;
}

.tips-text {
  font-size: 26rpx;
  color: #ff9800;
  line-height: 1.8;
  background: rgba(255, 152, 0, 0.1);
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff9800;
}

.muscle-list,
.benefit-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.muscle-badge {
  background: rgba(201, 169, 98, 0.2);
  color: #c9a962;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
}

.benefit-badge {
  background: rgba(76, 175, 80, 0.2);
  color: #4caf50;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
}

.video-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  background: linear-gradient(135deg, rgba(201, 169, 98, 0.2) 0%, rgba(201, 169, 98, 0.05) 100%);
  border: 1rpx solid rgba(201, 169, 98, 0.3);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 30rpx;
}

.video-icon {
  font-size: 40rpx;
}

.video-text {
  font-size: 28rpx;
  color: #c9a962;
  font-weight: bold;
}
